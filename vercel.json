{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/templates/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/templates",
      "destination": "/index.html"
    },
    {
      "source": "/profile/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/checkout/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/login",
      "destination": "/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/index.html"
    },
    {
      "source": "/register",
      "destination": "/index.html"
    },
    {
      "source": "/u/(.*)",
      "destination": "/api/portfolio-serve?username=$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/portfolio-serve?username=$1"
    }
  ],
  "redirects": [
    {
      "source": "/landing_1/(.*)",
      "destination": "/templates/modern/$1",
      "permanent": false
    },
    {
      "source": "/landing_2/(.*)", 
      "destination": "/templates/creative/$1",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}